server {
                listen 443 ssl proxy_protocol;
                set_real_ip_from 0.0.0.0/0;
                real_ip_header proxy_protocol;
                server_name monitor.{{ item.value.sitename }} dev-monitor.{{ item.value.sitename }};

                ssl_certificate     /etc/pki/tls/certs/{{ item.value.cert_bundle }};
                ssl_certificate_key /etc/pki/tls/private/{{ item.value.key_bundle }};

                location /
                {
                        set                     $backend_servers grafana;
                        proxy_pass              http://$backend_servers:3000;
                        proxy_redirect          off;
                        proxy_set_header        Host    $host;
                        proxy_set_header        X-Real-Ip       $remote_addr;
                        proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
                        proxy_set_header        X-SSL-Cipher $ssl_cipher;
                        dav_methods             PUT DELETE MKCOL COPY MOVE;
                        create_full_put_path    on;
                        
#                        auth_basic "Closed content";
#                        auth_basic_user_file /etc/nginx/htaccess.passwd;

                        client_max_body_size    90m;
                        client_body_buffer_size 256k;
                        proxy_connect_timeout   3s;

                        proxy_buffer_size       4k;
                        proxy_buffers           4 32k;
                        proxy_busy_buffers_size 64k;
                        proxy_temp_file_write_size      64k;
                }
                location /prometheus
                {
                        set                     $backend_servers monitor;
                        proxy_pass              http://$backend_servers:9090;
                        proxy_redirect          off;
                        proxy_set_header        Host    $host;
                        proxy_set_header        X-Real-Ip       $remote_addr;
                        proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
                        proxy_set_header        X-SSL-Cipher $ssl_cipher;
                        dav_methods             PUT DELETE MKCOL COPY MOVE;
                        create_full_put_path    on;
                        
                        auth_basic "Closed content";
                        auth_basic_user_file /etc/nginx/htaccess.passwd;

                        client_max_body_size    90m;
                        client_body_buffer_size 256k;
                        proxy_connect_timeout   3s;

                        proxy_buffer_size       4k;
                        proxy_buffers           4 32k;
                        proxy_busy_buffers_size 64k;
                        proxy_temp_file_write_size      64k;
                }

        }
